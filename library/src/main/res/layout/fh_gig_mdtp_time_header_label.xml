<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fh_gig_mdtp_time_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/fh_gig_mdtp_accent_color"
    android:clipChildren="false"
    >
  <View
      android:id="@+id/fh_gig_mdtp_center_view"
      android:layout_width="1dp"
      android:layout_height="1dp"
      android:layout_centerInParent="true"
      android:background="#00000000"
      android:importantForAccessibility="no"
      android:visibility="invisible"
      />
  <TextView
      android:id="@+id/fh_gig_mdtp_hour_space"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/fh_gig_mdtp_separator"
      android:importantForAccessibility="no"
      android:text="@string/fh_gig_mdtp_time_placeholder"
      android:visibility="invisible"
      style="@style/fh_gig_mdtp_time_label"
      />
  <FrameLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_alignLeft="@+id/fh_gig_mdtp_hour_space"
      android:layout_alignRight="@+id/fh_gig_mdtp_hour_space"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/fh_gig_mdtp_extra_time_label_margin"
      android:layout_marginRight="@dimen/fh_gig_mdtp_extra_time_label_margin"
      android:background="@android:color/transparent"
      android:clipChildren="false"
      >
    <com.golrangsystem.materialdatetimepicker.AccessibleTextView
        android:id="@+id/fh_gig_mdtp_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/fh_gig_mdtp_time_placeholder"
        android:textColor="@color/fh_gig_mdtp_white"
        style="@style/fh_gig_mdtp_time_label"
        />
  </FrameLayout>
  <TextView
      android:id="@+id/fh_gig_mdtp_separator"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/fh_gig_mdtp_center_view"
      android:layout_centerVertical="true"
      android:background="@android:color/transparent"
      android:importantForAccessibility="no"
      android:paddingLeft="@dimen/fh_gig_mdtp_separator_padding"
      android:paddingRight="@dimen/fh_gig_mdtp_separator_padding"
      android:text="@string/fh_gig_mdtp_time_separator"
      android:textColor="@color/fh_gig_mdtp_accent_color_focused"
      style="@style/fh_gig_mdtp_time_label"
      />
  <TextView
      android:id="@+id/fh_gig_mdtp_minutes_space"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/fh_gig_mdtp_separator"
      android:importantForAccessibility="no"
      android:text="@string/fh_gig_mdtp_time_placeholder"
      android:textColor="@color/fh_gig_mdtp_accent_color_focused"
      android:visibility="invisible"
      style="@style/fh_gig_mdtp_time_label"
      />
  <FrameLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_alignLeft="@+id/fh_gig_mdtp_minutes_space"
      android:layout_alignRight="@+id/fh_gig_mdtp_minutes_space"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/fh_gig_mdtp_extra_time_label_margin"
      android:layout_marginRight="@dimen/fh_gig_mdtp_extra_time_label_margin"
      android:background="@android:color/transparent"
      >
    <com.golrangsystem.materialdatetimepicker.AccessibleTextView
        android:id="@+id/fh_gig_mdtp_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:text="@string/fh_gig_mdtp_time_placeholder"
        android:textColor="@color/fh_gig_mdtp_accent_color_focused"
        style="@style/fh_gig_mdtp_time_label"
        />
  </FrameLayout>
  <TextView
      android:id="@+id/fh_gig_mdtp_separator_seconds"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/fh_gig_mdtp_minutes_space"
      android:background="@android:color/transparent"
      android:importantForAccessibility="no"
      android:paddingLeft="@dimen/fh_gig_mdtp_separator_padding"
      android:paddingRight="@dimen/fh_gig_mdtp_separator_padding"
      android:text="@string/fh_gig_mdtp_time_separator"
      android:textColor="@color/fh_gig_mdtp_accent_color_focused"
      style="@style/fh_gig_mdtp_time_label"
      />
  <TextView
      android:id="@+id/fh_gig_mdtp_seconds_space"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toRightOf="@+id/fh_gig_mdtp_separator_seconds"
      android:background="@android:color/transparent"
      android:importantForAccessibility="no"
      android:text="@string/fh_gig_mdtp_time_placeholder"
      android:textColor="@color/fh_gig_mdtp_accent_color_focused"
      android:visibility="invisible"
      style="@style/fh_gig_mdtp_time_label_small"
      />
  <com.golrangsystem.materialdatetimepicker.AccessibleTextView
      android:id="@+id/fh_gig_mdtp_seconds"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@id/fh_gig_mdtp_separator"
      android:layout_gravity="center"
      android:layout_toRightOf="@+id/fh_gig_mdtp_separator_seconds"
      android:background="@android:color/transparent"
      android:gravity="center_horizontal"
      android:text="@string/fh_gig_mdtp_time_placeholder"
      android:textColor="@color/fh_gig_mdtp_accent_color_focused"
      style="@style/fh_gig_mdtp_time_label_small"
      />
  <LinearLayout
      android:id="@+id/fh_gig_mdtp_ampm_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/fh_gig_mdtp_seconds"
      android:layout_toRightOf="@id/fh_gig_mdtp_seconds"
      android:background="@android:color/transparent"
      android:baselineAlignedChildIndex="1"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/fh_gig_mdtp_am_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:paddingLeft="@dimen/fh_gig_mdtp_ampm_left_padding"
        android:paddingRight="@dimen/fh_gig_mdtp_ampm_left_padding"
        android:text="@string/fh_gig_mdtp_am"
        android:textColor="@color/fh_gig_mdtp_accent_color_focused"
        style="@style/fh_gig_mdtp_ampm_label"
        />
    <TextView
        android:id="@+id/fh_gig_mdtp_pm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@android:color/transparent"
        android:importantForAccessibility="no"
        android:paddingLeft="@dimen/fh_gig_mdtp_ampm_left_padding"
        android:paddingRight="@dimen/fh_gig_mdtp_ampm_left_padding"
        android:text="@string/fh_gig_mdtp_pm"
        android:textColor="@color/fh_gig_mdtp_accent_color_focused"
        style="@style/fh_gig_mdtp_ampm_label"
        />
  </LinearLayout>
</RelativeLayout>
